<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epfl.php.testphp.FirstActivity">

    <Button
        android:id="@+id/displayTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="goToDisplayActivity"
        android:text="Display Test"/>

    <Button
        android:id="@+id/traingleTest"
        android:layout_below="@+id/displayTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToTriangleActivity"
        android:text="Triangle Test"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="user_id : "
            />
        <EditText
            android:layout_marginLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/user_id"
            android:text="gasp_unique_id"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="goToMainActivity"
        android:text="Start"/>
</RelativeLayout>
